page {
    height: 100%;
}
.title1-wrap {
    position: fixed;
    width: 100%;
    top: 20rpx;
    left: 0;
    display: flex;
    justify-content: center;
    box-shadow: 0 0 20rpx rgba(121, 121, 121, .22);
    text-align: center;
    font-size: 32rpx;
    line-height: 52rpx;
    z-index: 1;
}
.title1-text {
    width: 220rpx;
}
.title1-active {
    font-weight: 700;
    color: #ec491c;
}
.title2-box {
    background: #ececec;
    position: fixed;
    width: 100%;
    top: 102rpx;
    left: 0;
    font-size: 28rpx;
    line-height: 40rpx;
    color: #808080;
    z-index: 1;
}
.title2-item {
    width: 100%;
    height: 60rpx;
    position: relative;
    display: flex;
    justify-content: center;
    padding: 10rpx 0;
}
.title2-item::after {
    content: "";
    border: 18rpx solid transparent;
    border-bottom-color: #ececec;
    position: absolute;
    top: -34rpx;
}
.title2-item1::after {
    left: 137rpx;
}
.title2-item2::after {
    left: 357rpx;
}
.title2-item3::after {
    left: 577rpx;
}
.title2-wrap {
    box-sizing: content-box;
    height: 40rpx;
    display: flex;
    padding: 0 30rpx;
    overflow-x: auto;
}
.title2-text {
    padding: 0 24rpx;
    border-radius: 20rpx;
    white-space: nowrap;
}
.title2-text2 {
    /* margin: 0 54rpx; */
}
.title2-text3 {
    margin: 0 54rpx;
}
.title2-active {
    background: #ec491c;
    color: #fff;
}
.wrap {
    height: 100%;
    padding-top: 162rpx;
}
.item {
    width: 694rpx;
    height: 170rpx;
    border-radius: 12rpx;
    box-shadow: 0 0 38rpx rgba(105, 105, 105, .24);
    margin: 30rpx auto 0;
    position: relative;
    padding-top: 74rpx;
}
.bg {
    width: 100%;
    height: 96rpx;
    border-radius: 0 0 12rpx 12rpx;
}
.content {
    position: absolute;
    width: 602rpx;
    top: 16rpx;
    left: 38rpx;
    display: flex;
}
.pic {
    width: 96rpx;
    height: 116rpx;
    margin: 12rpx 24rpx 0 0;
}
.info {
    width: 360rpx;
}
.title {
    font-size: 32rpx;
    line-height: 54rpx;
    font-weight: 700;
    color: #ec491c;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.flag-wrap {
    width: 270rpx;
    display: flex;
    flex-flow: row wrap;
    text-align: center;
    font-size: 18rpx;
    line-height: 32rpx;
}
.flag-text {
    width: 126rpx;
    background: #ececec;
    border-radius: 6rpx;
    margin: 3rpx 6rpx 3rpx 0;
}
.line {
    width: 2rpx;
    height: 114rpx;
    background: #e1e1e1;
    margin-top: 14rpx;
}
.icon {
    width: 64rpx;
    height: 62rpx;
    margin: 38rpx 0 0 auto;
}