page {
    height: 100%;
}
.head {
    position: fixed;
    width: 100%;
    top: 0;
    left: 0;
    z-index: 1;
    overflow: hidden;
}
.head-bg {
    width: 100%;
}
.title-box {
    display: flex;
    align-items: center;
    position: absolute;
    left: 20rpx;
}
.logo {
    width: 164rpx;
    height: 50rpx;
    margin-right: 18rpx;
}
.title {
    font-size: 26rpx;
    color: #fff;
}
.movable-box {
    width: 100%;
    height: 100%;
}
.flag-box {
    width: 78rpx;
    height: 78rpx;
    background: rgba(0, 0, 0, .3);
    border-radius: 50%;
    display: flex;
    z-index: 2;
}
.flag-icon {
    width: 46rpx;
    height: 46rpx;
    margin: auto;
}
.container {
    height: 100%;
}
.banner {
    width: 100%;
}
.content {
    position: absolute;
    width: 100%;
    left: 0;
}
.swiper-box {
    overflow: hidden;
    transform: translateY(0);
    margin: 0 auto;
    position: relative;
}
.swiper1-box {
    width: 710rpx;
    height: 230rpx;
    border-radius: 16rpx;
    margin-top: 20rpx;
}
.swiper2-box {
    height: 214rpx;
    margin-top: 10rpx;
}
.swiper {
    height: 100%;
}
.swiper-nav {
    height: 100%;
}
.swiper-img {
    width: 100%;
    height: 100%;
}
.swiper-dot-box {
    display: flex;
    justify-content: center;
    position: absolute;
    width: 100%;
    left: 0;
}
.swiper1-dot-box {
    bottom: 14rpx;
}
.swiper2-dot-box {
    bottom: 32rpx;
}
.swiper-dot {
    width: 8rpx;
    height: 8rpx;
    border-radius: 50%;
    background: rgba(255, 255, 255, .4);
    margin: 0 4rpx;
}
.dot-active {
    width: 16rpx;
    background: #fff;
    border-radius: 4rpx;
}
.link-box {
    width: 672rpx;
    display: flex;
    margin: 30rpx auto 0;
    text-align: center;
}
.link {
    width: 25%;
}
.link-icon {
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
    margin: 0 auto;
}
.link-icon1 {
    box-shadow: 0 6rpx 10rpx rgba(94, 59, 237, .26);
}
.link-icon2 {
    box-shadow: 0 6rpx 10rpx rgba(76, 100, 215, .26);
}
.link-icon3 {
    box-shadow: 0 6rpx 10rpx rgba(234, 78, 84, .26);
}
.link-icon4 {
    box-shadow: 0 6rpx 10rpx rgba(154, 55, 229, .26);
}
.link-text {
    font-size: 26rpx;
    line-height: 62rpx;
}
.recommend-box {
    position: relative;
    margin-top: -30rpx;
}
.recommend-bg {
    width: 750rpx;
    height: 104rpx;
}
.recommend {
    width: 100%;
    position: absolute;
    top: 68rpx;
    left: 0;
}
.recommend-title {
    position: absolute;
    left: 0;
    width: 100%;
    height: 124rpx;
    text-align: center;
    z-index: 1;
    overflow-x: auto;
}
.recommend-fixed-title {
    position: fixed;
    background: #fff;
}
.recommend-title-wrap {
    box-sizing: content-box;
    height: 100%;
    display: flex;
    padding: 20rpx;
}
.recommend-title-item {
    padding: 0 10rpx;
    white-space: nowrap;
}
.recommend-title1 {
    font-size: 32rpx;
    line-height: 48rpx;
}
.recommend-title2 {
    font-size: 22rpx;
    line-height: 36rpx;
    color: #808080;
    padding: 0 12rpx;
    border-radius: 18rpx;
}
.title1-active {
    font-weight: 700;
    color: #eb4f27;
}
.title2-active {
    background: #eb4f27;
    color: #fff;
}
.recommend-wrap {
    width: 710rpx;
    margin: 140rpx auto 0;
}
.recommend-item {
    box-shadow: 0 2rpx 38rpx rgba(105, 105, 105, .23);
    margin-bottom: 36rpx;
    border-radius: 12rpx;
    overflow: hidden;
}
.recommend-pic {
    width: 100%;
    height: 222rpx;
}
.recommend-text {
    font-size: 26rpx;
    line-height: 60rpx;
    padding: 0 26rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.pop-content {
    width: 442rpx;
    height: 506rpx;
    background: #fff;
    text-align: center;
    position: absolute;
    top: 50%;
    left: 154rpx;
    margin-top: -300rpx;
    padding-top: 40rpx;
}
.qrCode {
    width: 344rpx;
    height: 344rpx;
    margin: 0 auto;
}
.pop-text {
    font-size: 26rpx;
    line-height: 94rpx;
}
.pop-close-icon {
    width: 48rpx;
    height: 100rpx;
    position: absolute;
    bottom: -100rpx;
    left: 197rpx;
}
.pop-close {
    width: 48rpx;
    height: 48rpx;
    position: absolute;
    bottom: -100rpx;
    left: 197rpx;
}